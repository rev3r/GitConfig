[user]
	name = ...
	email = ...
[core]
	editor = code --wait # notepad
	quotepath = off
[http]
	sslVerify = false
[rerere]
	enabled = true
[alias]
	parent = "! echo develop"
	test = "! echo No tests defined"

	# config

	config-edit = config --global -e

	# log

	log-ahead = "! git log --oneline --ancestry-path `git parent`..HEAD"
	log-direct = log --oneline --first-parent
	log-labeled = log --oneline --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	# diff

	diff-full = diff --color-words
	diff-summary = diff --compact-summary
	diff-result = diff --shortstat

	# stash

	stash-all = "! \
		[[ ${1+abc} ]] && \
		\
		git stash push -um \"$1\" \
	#"

	# restore

	restore-worktree = restore --worktree .
	restore-staged = restore --staged .
	restore-both = restore --source=HEAD --worktree --staged .

	# reset

	reset-last = reset HEAD^ --soft
	reset-hard = reset HEAD^ --hard

	# clean

	clean-test = clean -dx --dry-run
	clean-execute = clean -dx --force

	# branch

	branch-current = rev-parse --abbrev-ref HEAD

	branch-recent = "! \
		git fetch && \
		git for-each-ref --sort='-committerdate' --format='%(color:dim)%(committerdate:relative)%09%(color:reset)%(refname:short)' --count=15 refs/heads/ \
	#"

	branch-all = "! \
		git fetch && \
		git branch -a --sort='-authordate' \
	#"

	branch-new = "! \
		[[ ${1+abc} ]] && \
		\
		git switch-pull `git parent` && \
		git switch -c $1 && \
		git push -u origin $1 \
	#"

	branch-delete = "! \
		current=`git branch-current` && \
		parent=`git parent` && \
		\
		[[ $current != $parent && $current != master ]] && \
		\
		git push origin :$current && \
		git switch $parent && \
		git branch -D $current \
	#"

	# checkout

	checkout-back = "! \
		[[ ${1+abc} ]] && \
		\
		git checkout @{-$1} \
	#"

	# switch

	switch-pull = "! \
		[[ ${1+abc} ]] && \
		\
		git switch $1 && \
		git pull \
	#"

	switch-stash = "! \
		[[ ${1+abc} ]] && \
		\
		git stash-all \"`git branch-current` -> $1\" && \
		git switch-pull $1 && \
		git stash pop --index \
	#"

	switch-remote = "! \
		[[ ${1+abc} ]] && \
		\
		git switch-pull $1 && \
		git pull-parent \
	#"

	# commit

	commit-amend = "! \
		git add -A && \
		git commit --amend --no-edit \
	"

	commit-all = "! \
		[[ ${1+abc} ]] && \
		\
		git add -A && \
		git commit -m \"$1\" \
	#"

	# rebase

	rebase-commits = "! \
		[[ ${1+abc} ]] && \
		\
		git rebase -i HEAD~$1 \
	#"

	# pull

	pull-parent = "! \
		git switch-pull `git parent` && \
		git switch - && \
		git merge `git parent` \
	#"

	# push

	push-remote = "! \
		git pull origin `git parent` && \
		git test && \
		git push \
	"

	push-all = "! \
		[[ ${1+abc} ]] && \
		\
		git commit-all \"$1\" && \
		git push-remote \
	#"

	push-staged = "! \
		[[ ${1+abc} ]] && \
		\
		git commit -m \"$1\" && \
		git push-remote \
	#"

	# tag

	tag-new = "! \
		[[ ${1+abc} && ${2+abc} ]] && \
		\
		git switch-pull master && \
		git tag -a $1 -m \"$2\" && \
		git push origin $1 \
	#"

	tag-delete = "! \
		[[ ${1+abc} ]] && \
		\
		git tag -d $1 && \
		git push origin :$1 \
	#"

	tag-update = "! \
		[[ ${1+abc} ]] && \
		\
		message=`git tag -l --format='%(contents)' $1` && \
		git tag-delete $1 && \
		git tag-new $1 \"$message\" \
	#"

	# other

	cleanup = "! \
		git stash clear && \
		git rerere forget . \
	"
