[core]
	editor = code --wait
[alias]
	log-ahead = log --oneline --ancestry-path develop..HEAD
	log-direct = log --oneline --decorate --first-parent
	log-labeled = log --oneline --decorate --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	branch-name = rev-parse --abbrev-ref HEAD

	branch-new = "! \
		git checkout develop && \
		git pull && \
		git checkout -b $1 && \
		git push -u origin $1 #"

	commit-all = "! \
		b=$(git branch-name) && \
		[[ $b != 'master' && $b != 'develop' ]] && \
		git add -A && \
		git commit -am \"$1\" #"

	rebase-remote = "! \
		b=$(git branch-name) && \
		[[ $b != 'master' && $b != 'develop' ]] && \
		git checkout develop && \
		git pull && \
		git checkout $b && \
		git rebase develop #"

	push-remote = "! \
		git rebase-remote && \
		git push #"
