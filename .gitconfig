[user]
	name = ...
	email = ...
[core]
	editor = code --wait # notepad
	quotepath = off
[rerere]
	enabled = true
[alias]
	parent = "! echo develop"
	test = "! echo 'No tests defined'"

	# config

	config-edit = config --global -e

	# log

	log-ahead = "! git log --oneline --ancestry-path $(git parent)..HEAD"
	log-direct = log --oneline --first-parent
	log-labeled = log --oneline --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	# diff

	diff-full = diff --color-words
	diff-summary = diff --compact-summary
	diff-result = diff --shortstat

	# restore

	restore-worktree = restore --worktree .
	restore-staged = restore --staged .
	restore-both = restore --source=HEAD --worktree --staged .

	# reset

	reset-last = reset HEAD^ --soft
	reset-hard = reset HEAD^ --hard

	# clean

	clean-test = clean -dx --dry-run
	clean-execute = clean -dx --force

	# stash

	stash-all = "! \
		[[ ${1+abc} ]] && \
		\
		git stash push -um \"$1\" \
	#"

	# branch

	branch-current = name-rev --name-only HEAD
	branch-recent = for-each-ref --sort='-committerdate' --format='%(color:dim)%(committerdate:relative)%09%(color:reset)%(refname:short)' --count=15 refs/heads/
	branch-all = branch -a --sort='-authordate'

	branch-new = "! \
		[[ ${1+abc} ]] && \
		\
		git switch-pull $(git parent) && \
		git switch -c $1 && \
		git push -u origin $1 \
	#"

	branch-remote = "! \
		[[ ${1+abc} ]] && \
		\
		git switch-pull $(git parent) && \
		git switch-pull $1 \
	#"

	branch-delete = "! \
		[[ ${1+abc} ]] && \
		\
		git push origin :$1 && \
		git switch $(git parent) && \
		git branch -D $1 \
	#"

	# switch

	switch-pull = "! \
		[[ ${1+abc} ]] && \
		\
		git switch $1 && \
		git pull \
	#"

	switch-stash = "! \
		[[ ${1+abc} ]] && \
		\
		git stash-all \"$(git branch-current) -> $1\" && \
		git switch-pull $1 && \
		git stash pop --index \
	#"

	# commit

	commit-amend = "! \
		git add -A && \
		git commit --amend --no-edit \
	"

	commit-all = "! \
		[[ ${1+abc} ]] && \
		\
		git add -A && \
		git commit -m \"$1\" \
	#"

	# rebase

	rebase-commits = "! \
		[[ ${1+abc} ]] && \
		\
		git rebase -i HEAD~$1 \
	#"

	# push

	push-remote = "! \
		git pull origin $(git parent) --rebase && \
		git test && \
		git push \
	"

	push-all = "! \
		[[ ${1+abc} ]] && \
		\
		git commit-all \"$1\" && \
		git push-remote \
	#"

	# tag

	tag-new = "! \
		[[ ${1+abc} && ${2+abc} ]] && \
		\
		git switch-pull master && \
		git tag -a $1 -m \"$2\" && \
		git push origin $1 \
	#"

	tag-delete = "! \
		[[ ${1+abc} ]] && \
		\
		git tag -d $1 && \
		git push origin :$1 \
	#"

	# other

	cleanup = "! \
		git stash clear && \
		git rerere forget . \
	"
