[user]
	name = ...
	email = ...
[core]
	editor = code --wait # notepad
	quotepath = off
[rerere]
	enabled = true
[alias]
	parent = "! echo develop"
	current = rev-parse --abbrev-ref HEAD

	# log

	log-ahead = "! git log --oneline --ancestry-path `git parent`..HEAD"
	log-direct = log --oneline --first-parent
	log-labeled = log --oneline --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	# branch

	branch-new = "! \
		git checkout `git parent` && \
		git pull && \
		git checkout -b $1 && \
		git push -u origin $1 \
	#"

	branch-remote = "! \
		git fetch && \
		git checkout $1 && \
		git pull \
	#"

	branch-delete = "! \
		git push origin :$1 && \
		git checkout `git parent` && \
		git branch -D $1 \
	#"

	# changes

	commit-amend = "! \
		git add -A && \
		git commit --amend --no-edit \
	#"

	commit-all = "! \
		git add -A && \
		git commit -m \"$1\" \
	#"

	# sync changes

	push-remote = "! \
		git pull origin `git parent` && \
		git push \
	#"

	# tag

	tag-new = "! \
		git checkout master && \
		git pull && \
		git tag -a $1 -m \"$2\" && \
		git push origin $1 \
	#"

	tag-delete = "! \
		git tag -d $1 && \
		git push origin :$1 \
	#"

	# stash

	stash-checkout = "! \
		git stash push -um \"`git current` -> $1\" && \
		git checkout $1 && \
		git pull origin `git parent` && \
		git stash pop \
	#"

	clear = "! \
		git stash clear && \
		git rerere forget . \
	#"
