[user]
	name = ...
	email = ...
[core]
	editor = code --wait # notepad
	quotepath = off
[rerere]
	enabled = true
[alias]
	current = rev-parse --abbrev-ref HEAD
	parent = "! echo develop"
	test = "! echo 'No tests defined'"

	# log

	log-ahead = "! git log --oneline --ancestry-path $(git parent)..HEAD"
	log-direct = log --oneline --first-parent
	log-labeled = log --oneline --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	# switch

	switch-pull = "! \
		git switch $1 && \
		git pull \
	#"

	switch-stash = "! \
		git stash push -um \"$(git current) -> $1\" && \
		git switch-pull $1 && \
		git stash pop --index \
	#"

	# branch

	branch-new = "! \
		git switch-pull $(git parent) && \
		git switch -c $1 && \
		git push -u origin $1 \
	#"

	branch-remote = "! \
		git switch-pull $(git parent) && \
		git switch $1 && \
		git rebase $(git parent) \
	#"

	branch-delete = "! \
		git push origin :$1 && \
		git switch $(git parent) && \
		git branch -D $1 \
	#"

	# commit

	commit-amend = "! \
		git add -A && \
		git commit --amend --no-edit \
	#"

	commit-all = "! \
		git add -A && \
		git commit -m \"$1\" && \
		git push-remote \
	#"

	# push

	push-remote = "! \
		git pull origin $(git parent) --rebase && \
		git test && \
		git push \
	#"

	# tag

	tag-new = "! \
		git switch-pull master && \
		git tag -a $1 -m \"$2\" && \
		git push origin $1 \
	#"

	tag-delete = "! \
		git tag -d $1 && \
		git push origin :$1 \
	#"

	# other

	cleanup = "! \
		git stash clear && \
		git rerere forget . \
	#"
