[alias]
	log-ahead = "log --oneline --ancestry-path develop..HEAD"
	log-direct = "log --oneline --decorate --first-parent"
	log-labeled = "log --oneline --decorate --graph --simplify-by-decoration"
	log-all = "log --oneline --decorate --graph"

	branch-name = "rev-parse --abbrev-ref HEAD"

	branch-new = "! \
		git pull-remote && \
		git checkout -b $1 && \
		git push -u origin $1 #"

	commit-all = "! \
		b=$(git branch-name) && \
		[[ $b != 'master' && $b != 'develop' ]] && \
		git add -A && \
		git commit -am \"$1\" #"

	push-remote = "! \
		b=$(git branch-name) && \
		[[ $b != 'master' && $b != 'develop' ]] && \
		git pull-remote && \
		git checkout $b && \
		git merge develop && \
		git push #"

	pull-remote = "! \
		git checkout develop && \
		git pull #"
