[user]
	name = ...
	email = ...
[core]
	editor = code --wait # notepad
	quotepath = off
[alias]
	parent = "!echo develop"
	current = rev-parse --abbrev-ref HEAD

	log-ahead = "!git log --oneline --ancestry-path $(git parent)..HEAD"
	log-direct = log --oneline --first-parent
	log-labeled = log --oneline --graph --simplify-by-decoration
	log-all = log --oneline --decorate --graph

	branch-new = "! \
		git checkout $(git parent) && \
		git pull && \
		git checkout -b $1 && \
		git push -u origin $1 #"

	commit-all = "! \
		[[ $(git current) != $(git parent) ]] && \
		git add -A && \
		git commit -am \"$1\" #"

	merge-remote = "! \
		current=$(git current) && \
		parent=$(git parent) && \
		[[ $current != $parent ]] && \
		git checkout $parent && \
		git pull && \
		git checkout $current && \
		git merge $parent #"

	push-remote = "! \
		git merge-remote && \
		git push #"

	branch-delete = "! \
		current=$(git current) && \
		parent=$(git parent) && \
		[[ $current != $parent ]] && \
		git push -u origin :$current && \
		git checkout $parent && \
		git branch -D $current #"
